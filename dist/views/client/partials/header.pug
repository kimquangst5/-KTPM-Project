header
    div(class="container")
        div(class="flex justify-between items-center py-4")
            a(href="/") 
                h2(class="font-bold text-[20px]") KTPM - Nhóm 11
            nav
                ul(class="flex space-x-4")
                    li
                        a(href="/") Trang chủ
                    li
                        a(href="/san-pham") Sản phẩm
                    li
                        a(href="/contact") Kim Quang, Bảo Duy, Thành Nhân, Thiên Bảo, Minh Quang
            div(class="flex items-center space-x-4")
                - if(!INFOR_USER)
                    a(href="/tai-khoan/dang-nhap")
                        span Đăng nhập
                    a(href="/tai-khoan/dang-ky")
                        span Đăng ký
                - else
                    a(href="/gio-hang")
                        span Giỏ hàng
                    a(href="/tai-khoan")
                        span #{INFOR_USER.fullname  || 'Tài khoản'}
                    a(href="/tai-khoan/dang-xuat")
                        span Đăng xuất
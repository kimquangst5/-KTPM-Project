extends ../../layouts/layout.pug
include ../../components/box-product.mixin.pug

block main
    - if(products && products.length > 0)
        div
            div(class="container")
                h3(class="text-center font-bold text-[20px] py-[10px]") Sản phẩm mới nhất
                div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4")
                    each product in products
                        +box-product(products)
    - else
        div(class="container")
            h3(class="text-center font-bold text-[20px] py-[10px]") Không có sản phẩm nào

extends ../../layouts/layout.pug
include ../../components/button.pug
include ../../components/page_header.pug

block script
    script(src="/admin/js/media/image/edit.js") 

block main
    +page_header("Cập nhật hình ảnh")
        +btn('Quay lại danh sách', "/admin/media/image", 'default', 'arrow-counterclockwise')
        +btn('Cập nhật', null, 'primary', 'plus-circle', `/admin/media/image/edit?public_id=${asset.public_id}`)
    
    sl-input(size = "small" required label = "Public Id" value = asset.public_id name = "public_id")
    img(src=asset.secure_url, alt="" class="h-[50vh]")
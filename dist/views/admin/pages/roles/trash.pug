extends ../../layouts/layout.pug
include ../../components/button.pug
include ../../components/page_header.pug

block script
    script(src="/admin/js/roles/trash.js") 

block main
    +page_header("Nhóm quyền đã xóa")
        +btn('Quay lại danh sách', "/admin/roles", 'default', 'arrow-counterclockwise')
    
    
    table(class="w-full")
        thead
            tr
                th STT
                th Vai trò
                th Mô tả
                th Xóa bởi
                th Hành động
        tbody
            - if(roles && roles.length > 0)
                each it, index in roles
                    tr
                        td #{index + 1}
                        td #{it.name}
                        td #{it.description}
                        td 
                        td
                            div(class="flex items-center justify-center gap-x-[10px]")
                                sl-button(action = `/admin/roles/khoi-phuc/${it._id}` size="small" variant="primary" outline pill) Khôi phục 
                                sl-button(delete = `/admin/roles/xoa-cung/${it._id}` size="small" variant="danger" outline pill) Xóa vĩnh viễn
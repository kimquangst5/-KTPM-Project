extends ../../layouts/layout.pug
include ../../components/button.pug
include ../../components/page_header.pug

block script
    script(src="/admin/js/roles/update.js")
    
block main
    +page_header("Cập nhật nhóm quyền")
        +btn('Quay lại danh sách', "/admin/roles", 'default', 'arrow-counterclockwise')
        +btn('Cập nhật', null, 'primary', 'plus-circle')

    form(action=`/admin/roles/cap-nhat/${role._id}` method = 'patch' class="flex flex-col gap-y-[10px]" update-role) 
        sl-input(type="text" label = 'Tên nhóm quyền' required placeholder = 'Tên nhóm quyền...' name = 'name' value = role.name size = 'small')
        sl-textarea(placeholder = 'Mô tả...' label = 'Mô tả nhóm quyền' name = 'description' value = role.description size = 'small')
        sl-input(placeholder = 'Tác giả' required label = 'Tác giả' value = role.created_by.fullname size = 'small' disabled)
        div(class="text-[--sl-input-label-color] text-[0.875rem]")
            span Tạo vào:
            sl-format-date(hour="numeric" minute="numeric" hour-format="12" date = role.createdAt)
            sl-format-date(lang="vi" date = role.createdAt)
        div(class="text-[--sl-input-label-color] text-[0.875rem]")
            span Cập nhật vào:
            sl-format-date(hour="numeric" minute="numeric" hour-format="12" date = role.updatedAt)
            sl-format-date(lang="vi" date = role.updatedAt)
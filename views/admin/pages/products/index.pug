extends ../../layouts/layout.pug

block main
    h1(class="w-full text-[20px] font-bold") Danh sách tài khoản quản trị
    button 
        a(href="/admin/accounts/create") Thêm mới
    
    table(class="w-full")
        thead
            tr
                th STT
                th Hình ảnh
                th Sản phẩm
                th Danh mục
                th Giá tiền
                th % giảm giá
                th Giá cuối
                th Hành động
        tbody
            - if(products && products.length > 0)
                each product, index in products
                    tr
                        td #{index + 1}
                        td
                            img(src=product.images[0] ? product.images[0].secure_url : '', alt="" class="h-[80px]")
                        td #{product.name}
                        td #{product.product_categories ? product.product_categories.name : ''}
                        td #{product.price}
                        td #{product.discount}
                        td #{product.price - (product.price * product.discount / 100)}
                        td(class="mx-auto")
                            a(href=`/admin/products/edit/${product._id}` class="mr-[20px] ml-auto") Sửa
                            a(href=`/admin/products/delete/${product._id}`) Xóa